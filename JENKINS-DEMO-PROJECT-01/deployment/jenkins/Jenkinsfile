pipeline{

    agent any

    stages {

        stage("Checkout repository"){
            steps{
               git url: "https://github.com/rupesh-hub/JENKINS-MASTER.git", branch: "main"
            }
        }

        stage("Build project") {
            steps{
                sh '''
                    cd JENKINS-DEMO-PROJECT-01
                    ./mvnw clean package -DskipTests
                '''
            }
        }

        stage("Unit Tests") {
            steps {

                sh '''
                    cd JENKINS-DEMO-PROJECT-01
                    ./mvnw clean test
                '''

            }
        }

        stage("Build docker image") {
             steps{
                 echo "Building docker image"
                 sh '''
                     cd JENKINS-DEMO-PROJECT-01
                     docker build -f deployment/docker/Dockerfile -t rupesh1997/jenkins-demo-project:1.0.0 .
                 '''
             }
        }

        stage("Deploy") {
             steps {
                 echo "Deployment to the server"
                 sh '''
                     docker system prune -f
                     docker run -d -p 9090:9090 --name jenkins-demo-project rupesh1997/jenkins-demo-project:1.0.0
                 '''
             }
        }
    }

}