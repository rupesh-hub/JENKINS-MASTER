pipeline{

    agent any

    stages {

        stage("Checkout repository"){
            steps{
               git url: "https://github.com/rupesh-hub/JENKINS-MASTER.git", branch: "main"
            }

        }

        stage("Build docker image") {
             steps{
                 echo "Building docker image"
                 sh '''
                     whoami
                     cd JENKINS-DEMO-PROJECT-01
                     docker build -f deployment/docker/Dockerfile -t rupesh1997jenkins-demo-project:1.0.0 .
                     '''
                    }
                }
    }

}