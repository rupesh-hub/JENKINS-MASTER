pipeline{

    agent any

    environment {
        IMAGE_NAME = 'rupesh1997/jenkins-demo-project:1.0.0'
        PROJECT_NAME = 'jenkins-demo-project'
        SONAR_HOME = tool "Sonar"
    }

    stages {

        stage("Checkout repository"){
            steps{
               git url: "https://github.com/rupesh-hub/JENKINS-MASTER.git", branch: "main"
            }
        }

        stage("Build project") {
            steps{
                sh '''
                    cd JENKINS-DEMO-PROJECT-01
                    ./mvnw clean package -DskipTests
                '''
            }
        }

        stage("Unit Tests") {
            steps {

                sh '''
                    cd JENKINS-DEMO-PROJECT-01
                    ./mvnw clean test
                '''

            }
        }

        stage("SonarQube Quality Analysis") {
            steps {
                withSonarQubeEnv("Sonar") {
                    sh '''
                        echo $SONAR_HOME
                        cd JENKINS-DEMO-PROJECT-01
                        $SONAR_HOME/bin/sonar-scanner -Dsonar.projectName=JENKINS-DEMO-PROJECT -Dsonar.projectKey=JENKINS-DEMO-PROJECT
                    '''
                }
            }
        }

        stage("OWASP Dependency Check") {
            steps{
                dependencyCheck additionalArguments: '--scan ./JENKINS-DEMO-PROJECT-01', odcInstallation: 'OWASP'
                dependencyCheckPublisher pattern: '**/JENKINS-DEMO-PROJECT-01/dependency-check-report.xml'
            }
        }

        stage("Sonar Quality Gate Scan") {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: false
                }
            }
        }

        stage("Trivy File System Scan") {
            steps {
                sh '''
                    cd JENKINS-DEMO-PROJECT-01
                    trivy fs --format table -o trivy-fs-report.html .
                '''
            }
        }

        stage("Build docker image") {
             steps{
                 echo "Building docker image"
                 sh '''
                     cd JENKINS-DEMO-PROJECT-01
                     docker build -f deployment/docker/Dockerfile -t ${IMAGE_NAME} .
                 '''
             }
        }

        stage("Deploy") {
             steps {
                 echo "Deployment to the server"
                 sh '''
                     docker kill ${PROJECT_NAME} && docker rm ${PROJECT_NAME}
                     docker system prune -f
                     docker run -d -p 9090:9090 --name ${PROJECT_NAME} ${IMAGE_NAME}
                 '''
             }
        }
    }

}